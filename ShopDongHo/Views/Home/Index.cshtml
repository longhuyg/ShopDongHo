@model IEnumerable<ShopDongHo.Models.DongHo>
@{
    ViewBag.Title = "Watch Luxury Store";
}
<div>
    <div id="slider" class="carousel slide" data-ride="carousel">


        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
            <li data-target="#demo" data-slide-to="4"></li>
            <li data-target="#demo" data-slide-to="5"></li>
            <li data-target="#demo" data-slide-to="6"></li>
            <li data-target="#demo" data-slide-to="7"></li>
            <li data-target="#demo" data-slide-to="8"></li>
            <li data-target="#demo" data-slide-to="9"></li>
        </ul>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/slide1.png" class="d-block w-100" alt="anh 1">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide2.jpg" class="d-block w-100" alt="anh 2">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide3.jpg" class="d-block w-100" alt="anh 3">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide4.jpg" class="d-block w-100" alt="anh 4">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide5.jpg" class="d-block w-100" alt="anh 5">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide6.jpg" class="d-block w-100" alt="anh 6">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide7.jpg" class="d-block w-100" alt="anh 7">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide8.jpg" class="d-block w-100" alt="anh 8">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide9.jpg" class="d-block w-100" alt="anh 9">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide10.jpg" class="d-block w-100" alt="anh 10">
            </div>
        </div>

    @*</div>*@

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>

    <div class="card mt-3">
        <h5 class="card-header">@ViewBag.Title</h5>
        <div class="card-body">
            <div class="card-deck">
                @foreach (var item in Model)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                            <div class="card list-books">
                                <a class="watch-item" href="@Url.Action("Details", "Home", new { maSP = item.ID })">
                                   <img src="~/@item.HinhAnhDH" class="card-img-top" alt="...">
                                   <div class="card-body al">
                                       <h5 class="card-title text-center">@item.TenDongHo</h5>
                                       <p class="card-text text-center">@String.Format("{0:N0}", item.DonGia) VNĐ</p>
                                   </div>
                                </a>
                                <div class="card-footer text-center">
                                    <a href="@Url.Action("ThemVaoGio", "GioHang", new { maSP = item.ID })" class="btn btn-danger fas fa-shopping-cart"> + giỏ hàng</a>
                                </div>
                            </div>
                    </div>        
                }
            </div>
        </div>
    </div>
</div>
<style>
    .carousel-inner img {
        height: 400px !important;
    }

    .carousel-control-prev:hover {
        background-color: #DCDCDC;
    }

    .carousel-control-next:hover {
        background-color: #DCDCDC;
    }
    .watch-item h5 p{
        cursor: pointer;
    }
    .watch-item img {
        width: 225px;
    }

</style>
